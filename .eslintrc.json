{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": [
			"warn",
			"tab",
			{ "SwitchCase": 1 }
		],
		"quotes": [
			"warn",
			"single"
		],
		"no-var": [
			"error"
		],
		"no-console": [
			"off"
		],
		"no-unused-vars": [
			"error"
		],
		"no-mixed-spaces-and-tabs": [
			"error"
		],
		"no-trailing-spaces": [
			"error"
		],
		"comma-spacing": [
			"error",
			{ "before": false, "after": true }
		],
		"key-spacing": [
			"error"
		]
	}
}
